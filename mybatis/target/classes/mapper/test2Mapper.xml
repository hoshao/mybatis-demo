<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reda.mapper.Test2Mapper">

    <cache
            eviction="FIFO"
            flushInterval="60000"
            size="512"
            readOnly="true"/>

    <select id="findById" resultType="User" useCache="true">
    select * from user where id = #{id}
  </select>

    <update id="update">
        update user set age = 100 where id =#{id}
    </update>

</mapper>